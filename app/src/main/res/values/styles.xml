<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="DrawerTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="sectionStyle">@style/SectionTheme</item>
        <item name="singleAccount">true</item>
        <item name="learningPattern">false</item>
        <item name="drawerColor">@color/gray_dark</item>
    </style>

    <style name="SectionTheme">
        <item name="sectionColorIcon">@android:color/white</item>
        <item name="sectionColorText">@android:color/white</item>
        <item name="sectionBackgroundColorPressed">@color/gray</item>
        <item name="sectionBackgroundColorSelected">@color/gray_2</item>
    </style>

    <style name="FontDefault">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontDefault.Green">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="FontSecondary">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FontHeader">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CardStyle">
        <item name="android:layout_marginRight">@dimen/card_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/card_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/card_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_vertical_margin</item>
    </style>

    <style name="SettingsEntry">
        <item name="android:padding">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="SettingsTextEntry" parent="SettingsEntry">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
